<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/planet_magnitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mars" />

    <TextView
        android:id="@+id/planet_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[]"
        app:layout_constraintEnd_toEndOf="@id/planet_size"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0.0" />

    <TextView
        android:id="@+id/planet_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[]"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/planet_magnitude"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0.0" />

    <TextView
        android:id="@+id/planet_seeing_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfect visibility"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:visibility="gone"
        tools:text="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>